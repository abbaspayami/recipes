    <changeSet  id="08" author="Abbas">
        <createTable tableName="recipe_Ingredient"
                     remarks="recipeIngredient Data">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rfIngredients" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="rfRecipes" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="09" author="Abbas">
        <addForeignKeyConstraint baseTableName="recipe_Ingredient" baseColumnNames="rfIngredients"
                                 constraintName="fk_ingredient_id"
