        <addForeignKeyConstraint baseTableName="recipe_Ingredient" baseColumnNames="rfRecipes"
                                 constraintName="fk_recipe_id"
                                 referencedTableName="ingredient" referencedColumnNames="id"/>
    </changeSet>
