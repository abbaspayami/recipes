<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="techgeeknext">
        <createTable tableName="recipe"
                     remarks="Recipe Data">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="serve" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="instructions" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet>
        <addForeignKeyConstraint baseTableName="recipes" baseColumnNames="rfFoodType"
                                 constraintName="fk_foodType_id"
                                 referencedTableName="ingredients" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="04" author="techgeeknext">
        <comment>Inserting Recipe records</comment>
        <insert tableName="recipe">
            <column name="id" valueNumeric="1"/>
            <column name="title" value="spageti"/>
            <column name="serve" valueNumeric="2"/>
            <column name="instruction" valueNumeric="First of mix them all of them"/>
            <column name="rfFoodType" valueNumeric="1"/>
        </insert>
        <insert tableName="recipe">
            <column name="id" valueNumeric="2"/>
            <column name="title" value="spaghetti"/>
            <column name="serve" valueNumeric="3"/>
            <column name="instruction" valueNumeric="First of mix them all of them and put on the oven"/>
        </insert>
        <insert tableName="recipe">
            <column name="id" valueNumeric="3"/>
            <column name="title" value="oatmeal"/>
            <column name="serve" valueNumeric="4"/>
            <column name="instruction" valueNumeric="First of mix them all of them and put on the oven"/>
        </insert>
        <insert tableName="recipe">
            <column name="id" valueNumeric="4"/>
            <column name="title" value="meatball"/>
            <column name="serve" valueNumeric="5"/>
            <column name="instruction" valueNumeric="First of mix them all of them and put on the oven"/>
        </insert>
        <insert tableName="recipe">
            <column name="id" valueNumeric="5"/>
            <column name="title" value="crept"/>
            <column name="serve" valueNumeric="2"/>
            <column name="instruction" valueNumeric="First of mix them all of them"/>
        </insert>

    </changeSet>
</databaseChangeLog>